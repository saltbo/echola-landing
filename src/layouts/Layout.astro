---
/** biome-ignore-all lint/correctness/noUnusedImports: React components are hydrated client-side with icons */
/** biome-ignore-all lint/correctness/noUnusedVariables: Props and config are passed to nested components */

import Footer from "@footer/Footer";
import type { LayoutWithAppDataProps } from "@t/layout";
import FloatingNavbar from "@ui/navigation/FloatingNavbar";
import BackToTop from "@ui/shared/BackToTop";
import { appData as defaultAppData } from "../data";

interface Props extends LayoutWithAppDataProps {}

const { title, description, appData } = Astro.props;
const navData = appData || defaultAppData;
const canonicalURL = Astro.site
	? new URL(Astro.url.pathname, Astro.site)
	: Astro.url;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
<meta name="keywords" content={defaultAppData.keywords.join(", ")} />
    
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    {description && <meta property="og:description" content={description} />}
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    
      <link rel="icon" type="image/png" sizes="32x32" href={navData.logo} />
      <link rel="icon" type="image/png" sizes="16x16" href={navData.logo} />
      <link rel="icon" sizes="192x192" href={navData.logo} />
      <link rel="icon" sizes="512x512" href={navData.logo} />
      <script is:inline>
      const theme = localStorage.getItem('theme') || 'system';
      document.documentElement.classList.remove('light', 'dark');
      
      if (theme === 'system') {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.classList.add(prefersDark ? 'dark' : 'light');
      } else {
        document.documentElement.classList.add(theme);
      }
      
      !localStorage.getItem('theme') && localStorage.setItem('theme', 'system');
    </script>
  </head>

  <!-- TODO: Prevent page scroll from jumping to the top on rapid F5 refreshes -->

  <body class="bg-gray-50 text-gray-900 dark:bg-black dark:text-white">
	<FloatingNavbar logo={navData.logo} title={navData.name} storeLinks={navData.storeLinks} socialLinks={defaultAppData.socialLinks} client:load />
    <div class="mx-auto h-screen max-w-full px-2 lg:max-w-[1500px]">
      <main><slot /></main>
      <Footer name={navData.name} logo={navData.logo} description={navData.description} client:load />
    </div>
    <BackToTop client:load />
  </body>
</html>


<style is:global>
  html.theme-switching *,
  html.theme-switching {
    transition: none !important;
  }
  
  html.light { color-scheme: light; }
  html.dark { color-scheme: dark; }

  .screenshots-scrollbar::-webkit-scrollbar {
    height: 8px;
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 4px;
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.15);
    border-radius: 4px;
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.15);
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.25);
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.25);
  }
</style>
