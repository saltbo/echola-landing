---
/** biome-ignore-all lint/correctness/noUnusedImports: FiHome icon is used in JSX template below */

import Layout from "@layouts/Layout.astro";
import { FiHome } from "react-icons/fi";
import { appData } from "../data";
---

<Layout title={`404 - Page Not Found | ${appData.name}`} description="Sorry, this page doesn't exist. Return to homepage to explore our mobile app features and download links.">
  <main class="flex min-h-[calc(100vh-250px)] items-center justify-center px-4">
    <div class="w-full max-w-lg text-center">
      <div class="mb-8">
        <h1 class="text-8xl font-bold text-heading mb-4 sm:text-9xl opacity-90">404</h1>
      </div>
      <h2 class="mb-4 text-2xl font-semibold text-heading sm:text-2xl">
        Page Not Found
      </h2>
      <p class="mb-8 text-lg leading-relaxed text-body sm:text-lg">
        Oops! The page you're looking for seems to have wandered off into the digital void.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center gap-3 rounded-xl border border-gray-300 dark:border-white/10 bg-white dark:bg-white/[0.04] px-7 py-4 font-medium text-gray-900 dark:text-white hover:scale-105 hover:bg-gray-50 dark:hover:bg-white/[0.08] hover:border-gray-400 dark:hover:border-white/20 hover:shadow-lg active:scale-95 sm:px-6 sm:py-3"
        style="touch-action: manipulation; -webkit-tap-highlight-color: transparent;"
      >
        <FiHome className="h-6 w-6 sm:h-5 sm:w-5" />
        <span class="text-base sm:text-sm">Go Home</span>
      </a>
    </div>
  </main>
</Layout>
